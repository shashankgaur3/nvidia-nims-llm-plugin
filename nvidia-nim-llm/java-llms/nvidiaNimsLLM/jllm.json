{
    "id": "nvidia-nim-llm-chat",
    "meta": {
        "label": "Chat Models"
    },
    "params": [ 
        {   
        "name": "apikeys",
        "label": "Keys preset",
        "type": "PRESET",
        "parameterSetId": "api-credentials"
        },   
        {
            "name": "endpoint_url",
            "label": "Endpoint URL",
            "type": "STRING",
            "defaultValue": "https://integrate.api.nvidia.com/v1/chat/completions",
            "description": "Assumes complete URL for e.g. Chat endpoint --> https://integrate.api.nvidia.com/v1/chat/completions and Embedding endpoint --> https://ai.api.nvidia.com/v1/retrieval/nvidia/embeddings ",
            "mandatory": true
        },
        {
            "name": "model",
            "label": "Model Key",
            "type": "STRING",
            "defaultValue": "google/gemma-2b",
            "mandatory": true
        },
        {
            "name": "maxParallelism",
            "label": "Maximum Parallelism",
            "type": "INT",
            "defaultValue": 8,
            "mandatory": true
        },
        {
            "name": "networkTimeout",
            "label": "Network Timeout (in milliseconds)",
            "type": "INT",
            "defaultValue": 60000,
            "mandatory": true
        },
        {
            "name": "maxRetries",
            "label": "Max Retries",
            "type": "INT",
            "defaultValue": 3,
            "mandatory": true
        },
        {
            "name": "firstRetryDelay",
            "label": "First retry delay (in milliseconds)",
            "type": "INT",
            "defaultValue": 3000,
            "mandatory": true
        },
        {
            "name": "retryDelayScale",
            "label": "Retry delay scale factor (multiplier per retry)",
            "type": "INT",
            "defaultValue": 2,
            "mandatory": true
        }
    ],
    "clientClass": "com.customllm.llm.nvidiaNIMSPlugin"
}